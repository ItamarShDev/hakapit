{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [
			"build/*.js",
			"app/api/fotmob-api/*.ts"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}