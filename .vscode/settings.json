{
  "files.autoSave": "off",
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  "editor.wordWrap": "bounded",
  "explorer.excludeGitIgnore": true,
  "search.useGlobalIgnoreFiles": true,
  "editor.useTabStops": true,
  "window.density.editorTabHeight": "default",
  "workbench.editor.showTabs": "multiple",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "errorLens.enabled": true,
  "files.exclude": {
    ".cache": true,
    "public/build": true
  },
  "workbench.editor.wrapTabs": false,
  "editor.wrappingIndent": "indent",
  "errorLens.delayMode": "debounce",
  "errorLens.onSave": true,
  "errorLens.enableOnDiffView": true,
  "errorLens.gutterIconsEnabled": false,
  "errorLens.statusBarMessageType": "activeLine",
  "errorLens.statusBarMessageEnabled": true,
  "errorLens.scrollbarHackEnabled": false,
  "errorLens.enabledInMergeConflict": false,
  "errorLens.followCursor": "closestProblem",
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.gutterIconsFollowCursorOverride": false
}
